<idea-plugin version="2">
  <id>org.intellij.plugins.kapacitor</id>
  <name>Kapacitor language support</name>
  <version>0.1.0.dev</version>
  <vendor email="vlad.rassokhin+intellij+hcl@gmail.com" url="https://github.com/VladRassokhin">Vladislav Rassokhin</vendor>

  <description><![CDATA[
    <!-- TODO!!! -->
    ]]></description>

  <change-notes><![CDATA[
    <h4>0.1.0 (UNRELEASED)</h4>
    <p>Basic language support</p>
    ]]>
  </change-notes>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="141.3000"/>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="org.intellij.plugins.kapacitor.KapacitorFileTypeFactory"/>
    <lang.parserDefinition language="Kapacitor" implementationClass="org.intellij.plugins.kapacitor.KapacitorParserDefinition"/>

    <lang.syntaxHighlighterFactory key="Kapacitor" implementationClass="org.intellij.plugins.kapacitor.KapacitorSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="org.intellij.plugins.kapacitor.KapacitorColorsPage"/>

    <!-- CodeInsight -->
    <lang.commenter language="Kapacitor" implementationClass="org.intellij.plugins.kapacitor.editor.KapacitorCommenter"/>
    <lang.braceMatcher language="Kapacitor" implementationClass="org.intellij.plugins.kapacitor.codeinsight.KapacitorBraceMatcher"/>

    <lang.findUsagesProvider language="Kapacitor" implementationClass="org.intellij.plugins.kapacitor.findUsages.KapacitorFindUsagesProvider"/>
    <usageTypeProvider implementation="org.intellij.plugins.kapacitor.findUsages.KapacitorUsageTypeProvider"/>
    <psi.referenceContributor language="Kapacitor" implementation="org.intellij.plugins.kapacitor.psi.KapacitorReferenceContributor"/>

    <lang.elementManipulator forClass="org.intellij.plugins.kapacitor.psi.KapacitorIdentifier"
                             implementationClass="org.intellij.plugins.kapacitor.psi.KapacitorIdentifierManipulator"/>

    <lang.refactoringSupport language="Kapacitor" implementationClass="org.intellij.plugins.kapacitor.psi.KapacitorRefactoringSupportProvider"/>

    <!-- Inject Regexps -->
    <languageInjector implementation="org.intellij.plugins.kapacitor.RegexInjector"/>

  </extensions>

  <application-components>
  </application-components>

  <project-components>
  </project-components>

  <actions>
  </actions>

</idea-plugin>
